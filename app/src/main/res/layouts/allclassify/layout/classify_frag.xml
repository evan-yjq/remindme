<?xml version="1.0" encoding="utf-8"?>
<com.evan.remindme.tasks.ScrollChildSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/allClassifyContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/allClassifyLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ListView
                    android:id="@+id/allClassify_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/list_item_divider_left_15_right_15"
                    android:dividerHeight="1px"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/noClassify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/noClassifyIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_assignment_turned_in_24dp" />

            <TextView
                    android:id="@+id/noClassifyMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/no_tasks_all"
                    android:layout_marginBottom="@dimen/list_item_padding" />

            <TextView
                    android:id="@+id/noClassifyAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/touch_feedback"
                    android:gravity="center"
                    android:text="@string/no_classify_add" />

        </LinearLayout>

    </RelativeLayout>

</com.evan.remindme.tasks.ScrollChildSwipeRefreshLayout>